{
  "version": 2,
  "name": "scam-hunter",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/_next/static/(?:[^/]+/pages|chunks|runtime)/.+",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/static/(.+",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/manifest.json",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Scam Hunter",
    "NEXT_PUBLIC_APP_DESCRIPTION": "Detect. Decide. Dominate."
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_NAME": "Scam Hunter",
      "NEXT_PUBLIC_APP_DESCRIPTION": "Detect. Decide. Dominate."
    }
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 10
    }
  },
  "regions": ["all"],
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false
}
